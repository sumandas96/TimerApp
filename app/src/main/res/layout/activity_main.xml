<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#19619B"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/editHour"
        android:layout_width="84dp"
        android:layout_height="102dp"
        android:layout_marginTop="280dp"
        android:background="#19619B"
        android:hint="@string/timer"
        android:textColorHint="#1B537F"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.131"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editMin"
        android:layout_width="85dp"
        android:layout_height="102dp"
        android:layout_marginTop="280dp"
        android:layout_marginEnd="128dp"
        android:layout_marginRight="128dp"
        android:background="#19619B"
        android:hint="@string/timer"
        android:textColorHint="#1B537F"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toEndOf="@+id/editHour"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editSec"
        android:layout_width="94dp"
        android:layout_height="102dp"
        android:layout_marginTop="280dp"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:background="#19619B"
        android:hint="@string/timer"
        android:textColor="#CFE0E6"
        android:textColorHint="#1B537F"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.848"
        app:layout_constraintStart_toEndOf="@+id/editMin"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/playButton"
        android:layout_width="90dp"
        android:layout_height="62dp"
        android:layout_marginBottom="124dp"
        android:background="@drawable/buttonblue"
        android:onClick="countDown"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.255"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editHour"
        app:srcCompat="@android:drawable/ic_media_play" />

    <ImageButton
        android:id="@+id/pauseButton"
        android:layout_width="90dp"
        android:layout_height="62dp"
        android:layout_marginBottom="168dp"
        android:background="@drawable/buttonblue"
        android:onClick="countPause"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.315"
        app:layout_constraintStart_toEndOf="@+id/playButton"
        app:layout_constraintTop_toBottomOf="@+id/editSec"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@android:drawable/ic_media_pause" />

</androidx.constraintlayout.widget.ConstraintLayout>