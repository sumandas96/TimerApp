<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#19619B"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/editSec"
        android:inputType="number"
        android:layout_width="92dp"
        android:layout_height="150dp"
        android:layout_marginTop="288dp"
        android:layout_marginEnd="48dp"
        android:layout_marginRight="48dp"
        android:background="#19619B"
        android:hint="@string/sec"
        android:textColor="#CFE0E6"
        android:textColorHint="#EBE1E1"
        android:textSize="80sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editHour"
        android:inputType="number"
        android:layout_width="115dp"
        android:layout_height="150dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="288dp"
        android:background="#19619B"
        android:hint="@string/timer"
        android:textColorHint="#EBE1E1"
        android:textSize="80sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editMin"
        android:inputType="number"
        android:layout_width="115dp"
        android:layout_height="150dp"
        android:layout_marginTop="288dp"
        android:layout_marginEnd="140dp"
        android:layout_marginRight="140dp"
        android:background="#19619B"
        android:hint="@string/timer"
        android:textColorHint="#EBE1E1"
        android:textSize="80sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/playButton"
        android:layout_width="90dp"
        android:layout_height="62dp"
        android:layout_marginBottom="204dp"
        android:background="@drawable/buttonblue"
        android:onClick="countDown"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.286"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@android:drawable/ic_media_play" />

    <ImageButton
        android:id="@+id/pauseButton"
        android:layout_width="90dp"
        android:layout_height="62dp"
        android:layout_marginBottom="204dp"
        android:background="@drawable/buttonblue"
        android:onClick="countPause"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.369"
        app:layout_constraintStart_toEndOf="@+id/playButton"
        app:srcCompat="@android:drawable/ic_media_pause" />

</androidx.constraintlayout.widget.ConstraintLayout>