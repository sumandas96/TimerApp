<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#19619B"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/editHour"
        android:layout_width="123dp"
        android:layout_height="106dp"
        android:layout_marginTop="280dp"
        android:background="#19619B"
        android:hint="@string/timer"
        android:textColorHint="#EBE1E1"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.131"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editSec"
        android:layout_width="205dp"
        android:layout_height="99dp"
        android:layout_marginTop="284dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:background="#19619B"
        android:hint="00:00"
        android:inputType="number"
        android:textColor="#CFE0E6"
        android:textColorHint="#EBE1E1"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/playButton"
        android:layout_width="90dp"
        android:layout_height="62dp"
        android:layout_marginBottom="124dp"
        android:background="@drawable/buttonblue"
        android:onClick="countDown"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.168"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editHour"
        app:layout_constraintVertical_bias="0.482"
        app:srcCompat="@android:drawable/ic_media_play" />

    <ImageButton
        android:id="@+id/pauseButton"
        android:layout_width="90dp"
        android:layout_height="62dp"
        android:layout_marginBottom="168dp"
        android:background="@drawable/buttonblue"
        android:onClick="pause"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.169"
        app:layout_constraintStart_toEndOf="@+id/playButton"
        app:layout_constraintTop_toBottomOf="@+id/editSec"
        app:layout_constraintVertical_bias="0.956"
        app:srcCompat="@android:drawable/ic_media_pause" />

    <ImageButton
        android:id="@+id/resetButton"
        android:layout_width="90dp"
        android:layout_height="62dp"
        android:onClick="reset"
        android:background="@drawable/buttonblue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.561"
        app:layout_constraintStart_toEndOf="@+id/pauseButton"
        app:layout_constraintTop_toBottomOf="@+id/editSec"
        app:layout_constraintVertical_bias="0.2"
        app:srcCompat="@drawable/reset" />

</androidx.constraintlayout.widget.ConstraintLayout>