<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#19619B"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/editSec"
        android:layout_width="126dp"
        android:layout_height="143dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="252dp"
        android:layout_marginLeft="252dp"
        android:layout_marginTop="235dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:background="#19619B"
        android:hint="@string/sec"
        android:inputType="number"
        android:textColor="#CFE0E6"
        android:textColorHint="#EBE1E1"
        android:textSize="80sp"
        tools:layout_editor_absoluteX="265dp" />

    <EditText
        android:id="@+id/editHour"
        android:layout_width="152dp"
        android:layout_height="133dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="135dp"
        android:layout_marginLeft="135dp"
        android:layout_marginTop="238dp"
        android:layout_marginEnd="106dp"
        android:layout_marginRight="106dp"
        android:background="#19619B"
        android:hint="@string/timer"
        android:inputType="number"
        android:textColorHint="#EBE1E1"
        android:textSize="80sp" />

    <EditText
        android:id="@+id/editMin"
        android:layout_width="wrap_content"
        android:layout_height="133dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="238dp"
        android:layout_marginEnd="220dp"
        android:layout_marginRight="220dp"
        android:background="#19619B"
        android:hint="@string/timer"
        android:inputType="number"
        android:textColorHint="#EBE1E1"
        android:textSize="80sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="146dp" />

    <ImageButton
        android:id="@+id/playButton"
        android:layout_width="121dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="65dp"
        android:layout_marginLeft="65dp"
        android:layout_marginEnd="207dp"
        android:layout_marginRight="207dp"
        android:layout_marginBottom="188dp"
        android:background="@drawable/buttonblue"
        android:onClick="countDown"
        app:srcCompat="@android:drawable/ic_media_play" />

    <ImageButton
        android:id="@+id/pauseButton"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="200dp"
        android:layout_marginLeft="200dp"
        android:layout_marginEnd="64dp"
        android:layout_marginRight="64dp"
        android:layout_marginBottom="188dp"
        android:background="@drawable/buttonblue"
        android:onClick="countPause"
        app:srcCompat="@android:drawable/ic_media_pause" />

</RelativeLayout>