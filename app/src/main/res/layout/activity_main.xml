<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#19619B"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/editHour"
        android:layout_width="115dp"
        android:layout_height="150dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="284dp"
        android:background="#19619B"
        android:hint="00:"
        android:inputType="number"
        android:textColor="#fff"
        android:textColorHint="#1A527E"
        android:textSize="80sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editMin"
        android:layout_width="199dp"
        android:layout_height="145dp"
        android:layout_marginTop="292dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:background="#19619B"
        android:hint="00:00"
        android:textColor="#fff"
        android:inputType="number"
        android:textColorHint="#1A527E"
        android:textSize="80sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/editHour"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/playButton"
        android:layout_width="90dp"
        android:layout_height="62dp"
        android:layout_marginBottom="112dp"
        android:background="@drawable/buttonblue"
        android:onClick="countDown"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.152"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editHour"
        app:layout_constraintVertical_bias="0.529"
        app:srcCompat="@android:drawable/ic_media_play" />

    <ImageButton
        android:id="@+id/pauseButton"
        android:layout_width="90dp"
        android:layout_height="62dp"
        android:layout_marginBottom="112dp"
        android:background="@drawable/buttonblue"
        android:onClick="pause"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.192"
        app:layout_constraintStart_toEndOf="@+id/playButton"
        app:layout_constraintTop_toBottomOf="@+id/editMin"
        app:srcCompat="@android:drawable/ic_media_pause" />

    <ImageButton
        android:id="@+id/resetButton"
        android:layout_width="90dp"
        android:layout_height="62dp"
        android:layout_marginBottom="136dp"
        android:background="@drawable/buttonblue"
        android:onClick="reset"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.53"
        app:layout_constraintStart_toEndOf="@+id/pauseButton"
        app:srcCompat="@drawable/reset" />

</androidx.constraintlayout.widget.ConstraintLayout>